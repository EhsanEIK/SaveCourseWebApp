
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/LogIn_Register.css" rel="stylesheet" />
</head>
<body>
    <div class="container" id="link1">
        <center>
            <div class="jumbotron">
                <h1>Register Here</h1>
            </div>
            <div>
                <button class="btn btn-danger" onclick="location.href = '@Url.Action("ReadFirst", "CourseDetails")'">Read First</button>
            </div>
            <div id="messageLabel" style="font-size: 25px; color: red;">@ViewBag.Message</div>
            <br/>
            <form id="registerForm" method="POST">
                <div class="form-group">
                    <label for="userCodeId">User Id:</label>
                    <input type="text" class="form-control" id="userCodeId" name="userCodeId" placeholder="Reg0000">
                </div>
                <div class="form-group">
                    <label for="userName">User Name:</label>
                    <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter you name">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="******">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br/>
            <div>
                <a href="#" onclick="location.href = '@Url.Action("LogIn", "CourseDetails")'">LogIn</a>
            </div>
        </center>
    </div>
</body>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script>
    setTimeout(function () {
        $("#messageLabel").hide(1000).empty();
    }, 3000);
    
    //Validation................................

    $(document).ready(function () {
        $("#registerForm").validate({
            rules: {
                userCodeId: "required",
                userName: "required",
                password: {
                    required: true,
                    minlength: 6
                }
            },
            messages: {
                userCodeId: "Please enter your User Id.",
                userName: "Please enter your User Name.",
                password: {
                    required: "Please enter the Password.",
                    minlength: "Your password must be at least 6 characters long."
                }
            }
        });
    });

</script>
</html>
